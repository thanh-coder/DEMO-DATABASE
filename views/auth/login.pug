extends ../layouts/common.pug
block content
  .ml-5
    if errors
       each error in errors
         .alert.alert-danger=error

    form(action="/auth/login", method="POST") 
      .form-group.mb-2
        label.mr-1(for="email") email
        br
        input#email.form-control(name="email",type="text",value=values ? values.email:"")
        label.mr-1(for="pasword") pasword
        br
        input#pasword.form-control(name="password",type="text",value=values ? values.password:"")
      button.btn.btn-primary Create